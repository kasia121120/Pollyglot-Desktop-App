<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="BrandPrimaryColor">#2E4C8B</Color>
    <Color x:Key="BrandAccentColor">#FFAB6B</Color>
    <Color x:Key="BrandSoftColor">#F7F9FF</Color>
    <Color x:Key="BrandMenuColor">#283A5A</Color>
    <Color x:Key="BrandBorderColor">#DFE3F1</Color>

    <SolidColorBrush x:Key="BrandPrimaryBrush" Color="{StaticResource BrandPrimaryColor}" />
    <SolidColorBrush x:Key="BrandAccentBrush" Color="{StaticResource BrandAccentColor}" />
    <SolidColorBrush x:Key="BrandSoftBrush" Color="{StaticResource BrandSoftColor}" />
    <SolidColorBrush x:Key="BrandMenuBrush" Color="{StaticResource BrandMenuColor}" />
    <SolidColorBrush x:Key="BrandBorderBrush" Color="{StaticResource BrandBorderColor}" />
    <FontFamily x:Key="BrandFontFamily">Segoe UI Semibold</FontFamily>

    <Style TargetType="Button">
        <Setter Property="FontFamily" Value="{StaticResource BrandFontFamily}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Background" Value="{StaticResource BrandAccentBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="6,2" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="0">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ToggleButton">
        <Setter Property="FontFamily" Value="{StaticResource BrandFontFamily}" />
        <Setter Property="Foreground" Value="{StaticResource BrandPrimaryBrush}" />
        <Setter Property="Background" Value="{StaticResource BrandSoftBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="6,2" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="0">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="DataGrid">
        <Setter Property="RowBackground" Value="{StaticResource BrandSoftBrush}" />
        <Setter Property="AlternatingRowBackground" Value="{StaticResource BrandBorderBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BrandBorderBrush}" />
        <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource BrandBorderBrush}" />
        <Setter Property="VerticalGridLinesBrush" Value="{StaticResource BrandBorderBrush}" />
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource BrandPrimaryBrush}" />
    </Style>
</ResourceDictionary>
