<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:PollyglotDesktopApp.Views">

    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

    <Style TargetType="{x:Type views:WszystkieViewBase}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:WszystkieViewBase}">
                        <Grid Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <ToolBar Grid.Row="0" Height="30" Margin="0,2,0,2">
                                <ToggleButton Content="Dodaj" Height="30" Width="70" Command="{Binding AddCommand}" Visibility="{Binding ShowAddButton, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                <ToggleButton Content="Odśwież" Height="30" Width="70" Command="{Binding LoadCommand}"/>
                            </ToolBar>

                            <Expander Grid.Row="1"
                                      Header="Sortowanie i filtrowanie"
                                      Background="Azure"
                                      Margin="0,4,0,4"
                                      Visibility="{Binding ShowSortFilter, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel Margin="5">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,6">
                                <Label Content="Sortowanie: " VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <ComboBox Width="180"
                                          ItemsSource="{Binding SortComboboxItems}"
                                          SelectedItem="{Binding SortField, Mode=TwoWay}"/>
                                <Button Content="↑" Width="36" Height="24" Margin="4,0,0,0"
                                        Command="{Binding SortAscendingCommand}"/>
                                <Button Content="↓" Width="36" Height="24" Margin="2,0,0,0"
                                        Command="{Binding SortDescendingCommand}"/>
                            </StackPanel>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Label Content="Filtrowanie: " VerticalAlignment="Center" Margin="0,0,6,0"/>
                                        <ComboBox Width="180"
                                                  ItemsSource="{Binding FindComboboxItems}"
                                                  SelectedItem="{Binding FindField, Mode=TwoWay}"
                                                  Margin="0,0,6,0"/>
                                        <TextBox Width="220"
                                                 Text="{Binding FindText, UpdateSourceTrigger=PropertyChanged}"
                                                 Margin="0,0,6,0"/>
                                        <Button Content="Filtruj"
                                                Width="80"
                                                Command="{Binding FindCommand}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Expander>

                            <ContentPresenter Grid.Row="2" Margin="0,5,0,5"/>
                        </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type views:JedenViewBase}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:JedenViewBase}">
                    <Grid Margin="0,10,0,0">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <ToolBar Grid.Row="0"
                             Margin="0,2,0,2"
                             Background="#f5f5f5">

                            <Button Content="Zapisz i zamknij"
                                Width="120"
                                Margin="5"
                                Command="{Binding SaveAndCloseCommand}" />

                            <Button Content="Anuluj"
                                Width="80"
                                Margin="5"
                                Command="{Binding CancelCommand}" />
                        </ToolBar>

                        <ContentPresenter Grid.Row="1"
                                      Margin="10" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>

