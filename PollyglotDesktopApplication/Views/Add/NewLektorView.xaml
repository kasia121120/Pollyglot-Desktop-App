<views:JedenViewBase x:Class="PollyglotDesktopApp.Views.Add.NewLektorView"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:views="clr-namespace:PollyglotDesktopApp.Views"
                     mc:Ignorable="d"
                     d:DesignHeight="450"
                     d:DesignWidth="600">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>


        <Label Grid.Row="0" Grid.Column="0" Content="Imię:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1"
                 Text="{Binding Imie, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,5"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Nazwisko:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1"
                 Text="{Binding Nazwisko, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,5"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Email:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1"
                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,5"/>


        <Label Grid.Row="3" Grid.Column="0" Content="Telefon:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1"
                 Text="{Binding Telefon, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,5"/>


        <Label Grid.Row="4" Grid.Column="0" Content="Stawka godzinowa:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="1"
                 Text="{Binding StawkaGodzinowa, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,5"/>


        <Label Grid.Row="5" Grid.Column="0" Content="Forma zatrudnienia:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.Column="1"
                 Text="{Binding FormaZatrudnienia, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,5"/>


        <Label Grid.Row="6" Grid.Column="0" Content="Data zatrudnienia:" VerticalAlignment="Center"/>
        <DatePicker Grid.Row="6" Grid.Column="1"
                    SelectedDate="{Binding DataZatrudnienia, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,5"/>
    </Grid>

</views:JedenViewBase>
