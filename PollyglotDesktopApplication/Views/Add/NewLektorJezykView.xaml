<local:JedenViewBase x:Class="PollyglotDesktopApp.Views.Add.NewLektorJezykView"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PollyglotDesktopApp.Views"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    mc:Ignorable="d"
                    d:DesignHeight="360"
                    d:DesignWidth="520">

    <local:JedenViewBase.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </local:JedenViewBase.Resources>

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Content="Lektor"/>
        <Label Grid.Row="0" Grid.Column="1" Background="White" Padding="4" VerticalAlignment="Center" Content="{Binding LektorDane}" HorizontalAlignment="Left"/>
        <Button Grid.Row="0" Grid.Column="2" Content="..." Command="{Binding ShowLektorzyCommand}" Width="30" Height="26" Margin="8,0,0,0"/>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBlock Foreground="Gray" FontSize="12" Text="Kliknij, aby wybrać z listy" Margin="4,2,0,0"/>
            <TextBlock Foreground="Red" FontSize="12" Text="{Binding LektorError}" Margin="4,0,0,0" Visibility="{Binding HasLektorError, Converter={StaticResource BoolToVis}}"/>
        </StackPanel>

        <Label Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Content="Język"/>
        <Label Grid.Row="2" Grid.Column="1" Background="White" Padding="4" VerticalAlignment="Center" Content="{Binding JezykDane}" HorizontalAlignment="Left"/>
        <Button Grid.Row="2" Grid.Column="2" Content="..." Command="{Binding ShowJezykiCommand}" Width="30" Height="26" Margin="8,0,0,0"/>

        <StackPanel Grid.Row="3" Grid.Column="1">
            <TextBlock Foreground="Gray" FontSize="12" Text="Kliknij, aby wybrać z listy" Margin="4,2,0,0"/>
            <TextBlock Foreground="Red" FontSize="12" Text="{Binding JezykError}" Margin="4,0,0,0" Visibility="{Binding HasJezykError, Converter={StaticResource BoolToVis}}"/>
        </StackPanel>

        <Label Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Content="Poziom kompetencji"/>
        <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"
                 Text="{Binding PoziomKompetencji, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                 Margin="4"/>

        <Label Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Content="Doświadczenie (lata)"/>
        <TextBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2"
                 Text="{Binding DoswiadczenieLat, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                 Margin="4"/>

        <Label Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Content="Certyfikat"/>
        <TextBox Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2"
                 Text="{Binding Certyfikat, UpdateSourceTrigger=PropertyChanged}"
                 Margin="4"/>

        <Label Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Content="Specjalizacja"/>
        <TextBox Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2"
                 Text="{Binding Specjalizacja, UpdateSourceTrigger=PropertyChanged}"
                 Margin="4"/>

        <Label Grid.Row="8" Grid.Column="0" VerticalAlignment="Top" Content="Uwagi"/>
        <TextBox Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="2"
                 Text="{Binding Uwagi, UpdateSourceTrigger=PropertyChanged}"
                 Margin="4"
                 MinHeight="90"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"/>
    </Grid>
</local:JedenViewBase>
