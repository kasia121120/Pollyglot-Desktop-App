<views:JedenViewBase x:Class="PollyglotDesktopApp.Views.Add.NewZajeciaView"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:views="clr-namespace:PollyglotDesktopApp.Views"
                     mc:Ignorable="d"
                     d:DesignHeight="520"
                     d:DesignWidth="600">

    <views:JedenViewBase.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </views:JedenViewBase.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                   Text="Najpierw wybierz grupę lub ucznia (obowiązuje tylko jedna opcja)."
                   TextWrapping="Wrap"
                   Margin="0,0,0,10"
                   FontWeight="Bold"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Grupa:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="1" Grid.Column="1"
                  ItemsSource="{Binding GrupaComboBoxItems}"
                  DisplayMemberPath="Value"
                  SelectedValuePath="Key"
                  SelectedValue="{Binding GrupaId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                  Margin="0,2"/>
        <TextBlock Grid.Row="2" Grid.Column="1"
                   Text="{Binding GrupaLanguageInfo}"
                   Margin="0,0,0,6"
                   Foreground="Gray"
                   FontStyle="Italic"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Uczeń:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="3" Grid.Column="1"
                  ItemsSource="{Binding UczenComboBoxItems}"
                  DisplayMemberPath="Value"
                  SelectedValuePath="Key"
                  SelectedValue="{Binding UczenId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                  Margin="0,2"/>
        <TextBlock Grid.Row="4" Grid.Column="1"
                   Text="{Binding UczenLanguageInfo}"
                   Margin="0,0,0,6"
                   Foreground="Gray"
                   FontStyle="Italic"/>

        <Label Grid.Row="5" Grid.Column="0" Content="Rodzaj zajęć:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="5" Grid.Column="1"
                  ItemsSource="{Binding RodzajOptions}"
                  SelectedItem="{Binding RodzajZajec, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                  Margin="0,2"/>

        <Label Grid.Row="6" Grid.Column="0" Content="Data zajęć:" VerticalAlignment="Center"/>
        <DatePicker Grid.Row="6" Grid.Column="1"
                    SelectedDate="{Binding Data, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                    Margin="0,2"/>
        <Label Grid.Row="7" Grid.Column="0" Content="Dzień tygodnia:" VerticalAlignment="Center"/> 
        <TextBox Grid.Row="7" Grid.Column="1"
                 Text="{Binding DzienTygodnia, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                 Margin="0,2"/>

        <Label Grid.Row="8" Grid.Column="0" Content="Godzina rozpoczęcia:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="8" Grid.Column="1"
                  ItemsSource="{Binding StartTimeSlots}"
                  SelectedItem="{Binding SelectedStartSlot, Mode=TwoWay}"
                  Margin="0,2"/>

        <Label Grid.Row="9" Grid.Column="0" Content="Godzina zakończenia:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="9" Grid.Column="1"
                  ItemsSource="{Binding AvailableEndTimes}"
                  SelectedItem="{Binding SelectedEndSlot, Mode=TwoWay}"
                  Margin="0,2"/>

        <Label Grid.Row="10" Grid.Column="0" Content="Sala:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="10" Grid.Column="1"
                  ItemsSource="{Binding SalaComboBoxItems}"
                  DisplayMemberPath="Value"
                  SelectedValuePath="Key"
                  SelectedValue="{Binding SalaId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                  Margin="0,2"/>

        <Label Grid.Row="11" Grid.Column="0" Content="Tryb zajęć:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="11" Grid.Column="1"
                  ItemsSource="{Binding TrybOptions}"
                  SelectedItem="{Binding Tryb, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                  Margin="0,2"/>

        <Label Grid.Row="12" Grid.Column="0" Content="Lektor:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="12" Grid.Column="1"
                  ItemsSource="{Binding LektorComboBoxItems}"
                  DisplayMemberPath="Value"
                  SelectedValuePath="Key"
                  SelectedValue="{Binding LektorId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                  Margin="0,2"/>

        <Label Grid.Row="13" Grid.Column="0" Content="Temat zajęć:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="13" Grid.Column="1"
                 Text="{Binding Temat, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                 Margin="0,2"/>

        <Label Grid.Row="14" Grid.Column="0" Content="Uwagi:" VerticalAlignment="Top" Margin="0,2"/>
        <TextBox Grid.Row="14" Grid.Column="1"
                 Text="{Binding Uwagi, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                 Margin="0,2"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 Height="70"/>

        <Border Grid.Row="15" Grid.ColumnSpan="2"
                Margin="0,12,0,0"
                Padding="8"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="4"
                Visibility="{Binding CzyPokazacPodsumowanieGrupy, Converter={StaticResource BoolToVisibility}}">
            <TextBlock Text="{Binding PodsumowanieGrupy}" Foreground="Black"/>
        </Border>
    </Grid>
</views:JedenViewBase>
