<views:WszystkieViewBase x:Class="PollyglotDesktopApp.Views.AllTables.WszystkieUczenKursView"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:views="clr-namespace:PollyglotDesktopApp.Views">

    <DataGrid AutoGenerateColumns="False"
              IsReadOnly="True"
              ItemsSource="{Binding List}">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Uczeń" Binding="{Binding Uczen}" />
            <DataGridTextColumn Header="Kurs" Binding="{Binding Kurs}" />
            <DataGridTextColumn Header="Język" Binding="{Binding Jezyk}" />
            <DataGridTextColumn Header="Rodzaj kursu" Binding="{Binding RodzajKursu}" />
            <DataGridTextColumn Header="Lektor" Binding="{Binding Lektor}" />
            <DataGridTextColumn Header="Podręcznik" Binding="{Binding Podrecznik}" />
        </DataGrid.Columns>
    </DataGrid>

</views:WszystkieViewBase>
