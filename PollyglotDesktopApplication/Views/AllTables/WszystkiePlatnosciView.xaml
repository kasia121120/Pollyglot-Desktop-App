<views:WszystkieViewBase x:Class="PollyglotDesktopApp.Views.AllTables.WszystkiePlatnosciView"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:views="clr-namespace:PollyglotDesktopApp.Views">

    <DataGrid AutoGenerateColumns="False"
              IsReadOnly="True"
              ItemsSource="{Binding List}">
        <DataGrid.Columns>
            <DataGridTextColumn Header="ID" Binding="{Binding PlatnoscId}" />
            <DataGridTextColumn Header="Uczeń" Binding="{Binding Uczen}" />
            <DataGridTextColumn Header="Kurs" Binding="{Binding Kurs}" />
            <DataGridTextColumn Header="Okres" Binding="{Binding Okres}" />
            <DataGridTextColumn Header="Kwota" Binding="{Binding Kwota}" />
            <DataGridTextColumn Header="Data płatności" Binding="{Binding DataPlatnosciDisplay}" />
            <DataGridTextColumn Header="Metoda" Binding="{Binding Metoda}" />
            <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
        </DataGrid.Columns>
    </DataGrid>

</views:WszystkieViewBase>
