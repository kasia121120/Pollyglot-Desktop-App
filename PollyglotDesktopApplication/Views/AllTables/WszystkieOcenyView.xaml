<views:WszystkieViewBase x:Class="PollyglotDesktopApp.Views.AllTables.WszystkieOcenyView"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:views="clr-namespace:PollyglotDesktopApp.Views">

        <DataGrid AutoGenerateColumns="False"
                  ItemsSource="{Binding List}"
                  IsReadOnly="True">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding OcenaId}" />
                <DataGridTextColumn Header="Uczeń" Binding="{Binding Uczen}" />
                <DataGridTextColumn Header="Zajęcia" Binding="{Binding Zajecia}" />
                <DataGridTextColumn Header="Rodzaj" Binding="{Binding Rodzaj}" />
                <DataGridTextColumn Header="Wartość" Binding="{Binding Wartosc}" />
                <DataGridTextColumn Header="Temat Oceny" Binding="{Binding TematOceny}" />
                <DataGridTextColumn Header="Data oceny"
                    Binding="{Binding DataOcenyDisplay}" />
            </DataGrid.Columns>

        </DataGrid>
</views:WszystkieViewBase>

