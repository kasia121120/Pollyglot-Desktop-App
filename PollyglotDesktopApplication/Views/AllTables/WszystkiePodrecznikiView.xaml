<views:WszystkieViewBase x:Class="PollyglotDesktopApp.Views.AllTables.WszystkiePodrecznikiView"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:views="clr-namespace:PollyglotDesktopApp.Views">

    <DataGrid AutoGenerateColumns="False"
              IsReadOnly="True"
              ItemsSource="{Binding List}"
              SelectedItem="{Binding WybranyPodrecznik, Mode=TwoWay}">
        <DataGrid.Columns>
            <DataGridTextColumn Header="ID" Binding="{Binding PodrecznikId}" />
            <DataGridTextColumn Header="Tytuł" Binding="{Binding Tytul}" />
            <DataGridTextColumn Header="Autor" Binding="{Binding Autor}" />
            <DataGridTextColumn Header="Wydawnictwo" Binding="{Binding Wydawnictwo}" />
            <DataGridTextColumn Header="Język" Binding="{Binding Jezyk}" />
            <DataGridTextColumn Header="Poziom" Binding="{Binding Poziom}" />
            <DataGridTextColumn Header="Rok wydania" Binding="{Binding RokWydania}" />
            <DataGridTextColumn Header="Opis" Binding="{Binding Opis}" />
        </DataGrid.Columns>
    </DataGrid>

</views:WszystkieViewBase>
