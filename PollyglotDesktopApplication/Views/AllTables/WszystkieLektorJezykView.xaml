<views:WszystkieViewBase x:Class="PollyglotDesktopApp.Views.AllTables.WszystkieLektorJezykView"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:views="clr-namespace:PollyglotDesktopApp.Views">

    <DataGrid AutoGenerateColumns="False"
              IsReadOnly="True"
              ItemsSource="{Binding List}">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Lektor" Binding="{Binding Lektor}" />
            <DataGridTextColumn Header="Język" Binding="{Binding Jezyk}" />
            <DataGridTextColumn Header="Poziom kompetencji" Binding="{Binding PoziomKompetencji}" />
            <DataGridTextColumn Header="Doświadczenie (lat)" Binding="{Binding DoswiadczenieLat}" />
            <DataGridTextColumn Header="Certyfikat" Binding="{Binding Certyfikat}" />
            <DataGridTextColumn Header="Specjalizacja" Binding="{Binding Specjalizacja}" />
        </DataGrid.Columns>
    </DataGrid>

</views:WszystkieViewBase>
