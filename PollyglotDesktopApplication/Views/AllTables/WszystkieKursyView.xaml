            <DataGridTextColumn Header="ID" Binding="{Binding KursId}" />
            <DataGridTextColumn Header="Nazwa kursu" Binding="{Binding NazwaKursu}" />
            <DataGridTextColumn Header="JÄ™zyk" Binding="{Binding Jezyk}" />
            <DataGridTextColumn Header="Rodzaj kursu" Binding="{Binding RodzajKursu}" />
            <DataGridTextColumn Header="Poziom" Binding="{Binding Poziom}" />
            <DataGridTextColumn Header="Cena" Binding="{Binding CenaMiesieczna}" />
            <DataGridTextColumn Header="Tryb" Binding="{Binding Tryb}" />
        </DataGrid.Columns>
    </DataGrid>

</views:WszystkieViewBase>
