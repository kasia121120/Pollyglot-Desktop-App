<views:WszystkieViewBase x:Class="PollyglotDesktopApp.Views.AllTables.WszystkieObecnosciView"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:views="clr-namespace:PollyglotDesktopApp.Views">

    <DataGrid AutoGenerateColumns="False"
              IsReadOnly="True"
              ItemsSource="{Binding List}">
        <DataGrid.Columns>
            <DataGridTextColumn Header="ID" Binding="{Binding ObecnoscId}" />
            <DataGridTextColumn Header="Zajęcia" Binding="{Binding Zajecia}" />
            <DataGridTextColumn Header="Uczeń" Binding="{Binding Uczen}" />
            <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
            <DataGridTextColumn Header="Uwagi" Binding="{Binding Uwagi}" />
        </DataGrid.Columns>
    </DataGrid>

</views:WszystkieViewBase>
