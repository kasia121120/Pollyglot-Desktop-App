<views:WszystkieViewBase x:Class="PollyglotDesktopApp.Views.AllTables.WszystkieGrupyView"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:views="clr-namespace:PollyglotDesktopApp.Views">

    <Grid>
        <DataGrid AutoGenerateColumns="False"
                  ItemsSource="{Binding List}"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  SelectedItem="{Binding SelectedGroup, Mode=TwoWay}"
                  MouseDoubleClick="DataGrid_MouseDoubleClick">
            <DataGrid.Columns>

                <DataGridTextColumn Header="ID" Binding="{Binding GrupaId}" />
                <DataGridTextColumn Header="Nazwa" Binding="{Binding Nazwa}" />

                <DataGridTextColumn Header="Kurs" Binding="{Binding Kurs}" />
                <DataGridTextColumn Header="Język" Binding="{Binding Jezyk}" />
                <DataGridTextColumn Header="Rodzaj kursu" Binding="{Binding RodzajKursu}" />

                <DataGridTextColumn Header="Lektor" Binding="{Binding Lektor}" />
                <DataGridTextColumn Header="Sala" Binding="{Binding Sala}" />
                <DataGridTextColumn Header="Podręcznik" Binding="{Binding Podrecznik}" />

                <DataGridTextColumn Header="Dzień" Binding="{Binding Dzien}" />
                <DataGridTextColumn Header="Tryb" Binding="{Binding Tryb}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>

</views:WszystkieViewBase>
